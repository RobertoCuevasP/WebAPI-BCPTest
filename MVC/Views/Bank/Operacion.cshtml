@using MVC.Models

@model mvcAbonoRetiroModel

@{
    ViewBag.Title = "Operacion";
}

<h2>Operacion</h2>

<div class="form-body">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(model => model.NroCuenta, "Seleccione Cuenta Origen")
            @Html.DropDownListFor(model => model.NroCuenta, new SelectList(ViewBag.data))
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Monto, "Saldo")
            @Html.EditorFor(model => model.Monto)
            @Html.ValidationMessageFor(model => model.Monto)

        </div>

        <div class="form-group">
            <input type="submit" name="submitButton" value="Abono" class="btn button" />
            <input type="reset" name="submitButton" value="Retiro" class="btn button" />
        </div>
    }

</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}