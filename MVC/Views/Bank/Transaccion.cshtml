@using MVC.Models

@model mvcTransactionModel

@{
    ViewBag.Title = "Transaccion";
}

<h2>Transaccion</h2>

<div class="form-body">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(model => model.CuentaOrigen, "Seleccione Cuenta Origen")
            @Html.DropDownListFor(model => model.CuentaOrigen, new SelectList(ViewBag.data))
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CuentaDestino, "Seleccione Cuenta Destino")
            @Html.DropDownListFor(model => model.CuentaDestino, new SelectList(ViewBag.data))
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Monto, "Saldo")
            @Html.EditorFor(model => model.Monto)
            @Html.ValidationMessageFor(model => model.Monto)

        </div>

        <div class="form-group">
            <input type="submit" value="Transferir" class="btn button" />
            <input type="reset" value="Borrar" class="btn button" />
        </div>
    }

</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}